@using Blog_ApplicationLayer.Models.Dto;
@model LoginDto

<table>
    <form method="post">
        <table>
            <tr>
                <td>User Email:</td>
                <td>
                    <input type="text" asp-for="Username" />
                </td>
            </tr>
            <tr>
                <td>Password</td>
                <td>
                    <input type="password" asp-for="Password" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit"  value="Login" />
                </td>
            </tr>
        </table>
    </form>


</table>